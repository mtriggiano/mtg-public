- present file do |tender_file_presenter|
	.row
		.col-12
			.px-2.bg-white.p-3
				.text-muted
					= icon('fas', 'list-alt')
					Información básica
				%hr
					%dl.row
						.col-12
							- if current_user.can?(:manage, Calendar)
								= simple_form_for file, html: {class: 'horizontal-form directUpload'}, wrapper: :horizontal_form, defaults: {disabled: file.disabled? } do |f|
									.row
										.col-md-4.col-lg-2.col-form-label.col-form-label-sm
											= f.label "Apertura"
										.col-md-8.col-lg-10.d-flex.justify-content-between
											= f.input :place, placeholder: "Lugar", label: false
											= f.input :delivery_date, input_html: {placeholder: "Fecha"}, as: :date_picker, label: false
											= f.input :delivery_hour, input_html: {placeholder: "Hora"}, as: :time_picker, label: false
											= save_button
							- else
								= see_contact_dl("Apertura", tender_file_presenter.delivery_data)
							%hr.dotted
							= see_contact_dl("Paciente", tender_file_presenter.pacient_with_number)
							%hr.dotted
							= see_contact_dl("Técnico", file.technical)
							%hr.dotted
							= see_contact_dl("Medico", file.doctor)
							%hr.dotted
						.col-6
							= see_contact_dl("Cliente", tender_file_presenter.client)
							%hr.dotted
							= see_contact_dl("Numeración externa", tender_file_presenter.external_number)
							%hr.dotted
							= see_contact_dl("Ubicación actual", tender_file_presenter.current_location)
							%hr.dotted
							= see_contact_dl("Número interno de Expdte", tender_file_presenter.number)
							%hr.dotted
							= see_contact_dl("Objeto", tender_file_presenter.objeto)
							%hr.dotted
							= see_contact_dl("Procedimiento", tender_file_presenter.title)
							%hr.dotted
							= see_contact_dl("Provincia", file.province)
							%hr.dotted
							= see_contact_dl("Forma de pago", file.forma_pago)
							%hr.dotted
							= see_contact_dl("Precio del pliego", file.precio_pliego)
						.col-6
							= see_contact_dl("Fecha de creación", tender_file_presenter.created_at)
							%hr.dotted
							= see_contact_dl("Resolucion", tender_file_presenter.resolution)
							%hr.dotted
							= see_contact_dl("Destinos", tender_file_presenter.destinos)
							%hr.dotted
							= see_contact_dl("Sist de Apertura", tender_file_presenter.sistema_apertura)
							%hr.dotted
							= see_contact_dl("Fecha de inicio", tender_file_presenter.init_date)
							%hr.dotted
							= see_contact_dl("¿Abierto?", tender_file_presenter.open)
							%hr.dotted
							= see_contact_dl("Estado", tender_file_presenter.state)
							%hr.dotted
							= see_contact_dl("Responsable", tender_file_presenter.user_name)
