= simple_form_builder supplier_budget, default: {label_html: {class: :h6}} do |f|
	= shared_nav(f)
	.card.shadow.mb-4.mx-4.rounded-lg{class: "border-left-#{record.state_color}"}
		.card-body
			= file_header(f)
			.header-detail
				= error_notification(f)
				.row
					.col-sm-4.col-12
						= number_input(f)
						.row
							.col-12
								= sale_client_select(f)
						.row
							.col-6
								= client_contact_input(f)
							.col-6
								= f.input :payment_type, label: "Condici√≥n de pago"
					.col-sm-4.col-12
						= date_input(f, :delivery_date)
						= f.input :delivery_address
						.row
							.col-6
								= date_input(f, :init_date)
							.col-6
								= date_input(f, :final_date)
					.col-sm-4.col-12
						.row
							.col-6
								= discount_input(f)
							.col-6
								= total_input(f)
						.row
							.col-6
								= usd_price_input(f)
							.col-6
								= total_usd_input(f)
						.row
							.col-6
								= currency_input(f)
							.col-6
								= state_input(f)
				= new_associated_document(f)
				= state_manager(f)

	= document_table(f) do
		= render '/file_attributes_configs/shared_extra_attributes', f:f, object: supplier_budget
		= observation_input(f)
		= render '/tenders/shared_attachment', f:f
