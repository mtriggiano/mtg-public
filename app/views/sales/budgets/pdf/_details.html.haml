      - details.compact.each_with_index do |det, index|
        %tr{style: "height: 28px !important;", class: det[:type]}
          %td.text_center
            =# index + 1 + ( 11 * (page_number -1))
            = index + 1 + (15 * (page_number - 1))
          %td.text_center
            = det["quantity"]
          %td
            = det["product_name"]
          %td.text_center
            = det["branch"]
          %td.text_center
            = det["source"]
          - unless det['tipo'] == 'child'
            %td.text_right
              = det["price"]
            %td.text_right
              = det["bonus_amount"]
            %td.text_right
              = Afip::ALIC_IVA.to_h[det['iva_aliquot']].to_f * 100
            %td.text_right
              = det["total"]
