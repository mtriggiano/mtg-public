- child ||= d.object.is_a_child?
- index = @index || d.index
= document_detail(d, index, child) do
  %td
    = d.input :subtype, collection: [["Producto", "Surgeries::SupplierBillInventary"], ["Servicio", "Surgeries::SupplierBillService"]], label: false, include_blank: false
  %td
    = product_td(d)
  %td
    = quantity_td(d)
    = measurement_td(d)
  %td
    = price_td(d)
  %td
    = discount_td(d)
  %td
    = iva_td(d)
  %td.fixed-col
    = total_td(d)
  %td.fixed-col
    = d.link_to_remove icon('fas', 'trash'), class: "btn btn-danger ml-3 #{'disabled' if supplier_bill.disabled?}"
