.background-1
.row.d-flex.align-items-center
  .col-md-offset-3.col-md-6.mx-auto
    .container.pt-4.border.shadow.p-4
      %h2.text-center
        = icon('fas', 'sign-in-alt') 
        Registrarse
      %hr.dotted
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f|
        = error_notification(f)
        .form-inputs
          = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }
        .form-inputs
          = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, label: "Contraseña"
        .form-inputs
          = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, label: "Confirmar contraseña"
        .actions.text-center
          = f.button :submit, "Registrarme", class: 'btn btn-success'
      %hr.dotted
      = render "users/shared/links"