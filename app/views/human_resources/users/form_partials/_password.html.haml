- if current_user.is_a_company_owner? || current_user.is_an_admin?
  .card.justify-flex-content.p-4
    .card-body.pt-0
      .row
        .col-8.offset-2
          %h5.card-title.text-center.border-bottom.pb-3
            = icon('fas', 'briefcase')
            Cambiar contraseña
          = simple_nested_form_for user,html: { class: 'horizontal-form'}, wrapper: :horizontal_form do |f|
            = error_notification(f)
            = hidden_field_tag :view, params[:view]
            .row
              .col-md-6
                = f.input :password, label: 'Contraseña'
              .col-md-6
                = f.input :password_confirmation, label: "Confirmar"
            %hr.dotted
            .actions.text-center
              = save_button
