- child ||= d.object.is_a_child?
- index = @index || d.index
= document_detail(d, index, child) do
	%td.d-flex.border-top-0
		= state_point(d.object.info) unless child
	%td
		= d.input :user_id, collection: current_company.users, required: true, input_html: {class: 'user_ov_comisionant'} unless child
		
	%td
		= detail_type_td(d)
	%td
		= product_td(d)
	%td
		= product_code_td(d)
	%td
		= branch_td(d)
	%td
		= quantity_td(d)
		= measurement_td(d)
	%td
		= d.input :price, input_html: {class: 'price_td sale_price_history'} unless child
	%td
		= discount_td(d) unless child
	%td
		= iva_td(d) unless child
	%td.fixed-col
		= total_td(d) unless child
		= d.input :description, as: :hidden
	%td.fixed-col
		= document_detail_actions d, index, child
