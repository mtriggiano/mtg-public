= simple_nested_form_for receipt, defaults: {disabled: receipt.disabled?} do |f|
	.card.shadow.mb-4.mx-4.rounded-lg{class: "border-left-#{record.state_color}"}
		.card-body
			= file_header(f)
			.header-detail
				= error_notification(f)
				.row
					.col-sm-4.col-12
						= number_input(f, true)
						= supplier_input(f)
					.col-sm-4.col-12
						= user_input(f)
						= state_input(f)
					.col-sm-4.col-12
						= date_input(f, :date)
						= total_input(f)
				= state_manager(f)
				
	= document_table(f) do
		= render '/file_attributes_configs/shared_extra_attributes', f:f, object: receipt
		= render '/purchases/shared_attachment', f:f