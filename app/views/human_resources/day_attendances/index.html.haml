.index
	.index-title
		.principal
			#{icon('fas', 'user-times')} Asistencias del dia
			=# link_to "Exportar", export_reports_sell_iva_movements_path(format: :xlsx), class: 'btn btn-info pull-right', data: {'skip-pjax' => true}
	#bmenu.mx-4.d-flex.justify-content-between.align-items-center
	.index-body.table-responsive
		%table#paginated_table.table{data: {source: day_attendances_path(format: :json)}}
			%thead.thead-light
				%th.actions{scope: 'col'} ID
				%th.actions{scope: 'col'} Empleado
				%th.actions{scope: 'col'} Fecha
				%th.actions{scope: 'col'} Check-in
				%th.actions{scope: 'col'} Check-out
				%th

			%tbody.table-bordered.text-center

= table_script(DatatableConstants::DayAttendance.merge("actions" => ""))
