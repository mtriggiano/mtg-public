= simple_nested_form_for(company) do |f|
	= error_notification(f)
	= f.hidden_field :view, value: params[:view]
	.table-responsive
		%table.table#bank_table
			%thead.thead-light
				%th{scope: 'col'} Nombre
				%th{scope: 'col'} Acciones
			%tbody
			= f.simple_fields_for :banks, :wrapper => false do |b|
				%tr.fields
					%td
						= b.input :name, label: false, placeholder: "Ej: Santander"
					%td
						= b.link_to_remove icon('fas', 'trash'), class: 'btn btn-danger ml-3'
	%center
		= f.link_to_add "#{icon('fas', 'plus')} AÃ±adir banco".html_safe, :banks, class: 'btn btn-secondary ml-2 mb-4', data: {target: '#bank_table'}
	%hr
	= save_button
