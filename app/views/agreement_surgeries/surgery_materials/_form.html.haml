- disabled ||= false
= simple_form_for surgery_material, defaults: {disabled: false }, html: {class: 'horizontal-form directUpload'}, wrapper: :horizontal_form, defaults: { disabled: disabled } do |f|
  = error_notification(f)
  
  = f.input :code, label: "Codigo"
  = f.input :description, label: "Descripcion"
  = f.input :category, label: "Categoria"
  = f.input :origin, label: "Origen", collection: AgreementSurgeries::SurgeryMaterial::ORIGENES, include_blank: false

  = f.input :price, label: "Precio"
  = f.input :minimum_price, label: "Precio minimo"
  = f.input :maximum_price, label: "Precio maximo"
  .text-center
    = f.input :active, label: "Activo?"
  .actions
    %hr
    = save_button unless disabled