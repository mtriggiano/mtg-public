- @files.each_with_index do |file, index|
	.accordion#sale_file
		.card
			.card-header{id: "heading#{index}"}
				%h2.mb-0
					= button_tag type: :button, class: 'btn btn-link collapsed', data:{toggle: 'collapse', target: "#collapse#{index}"}, aria: {expanded: false, controls: "collapse#{index}"} do
						.d-flex.align-items-center
							%span.state
								= surgery_state(file)
							= file.title

			.collapse{id: "collapse#{index}", data: {parent: "#sale_file"}, aria: {labelledby: "heading#{index}"}}
				= render "/sales/files/see/general", file: file