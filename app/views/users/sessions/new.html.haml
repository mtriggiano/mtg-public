.background-1
.d-flex.align-items-center.justify-content-center
	.col-md-6
		.container.border.rounded.px-4.py-5
			%h2.text-center.mb-5
				Inicia sesión
			= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mb-4' }) do |f|
				.row.align-items-center.justify-content-center.mb-3
					.col-md-8
						= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
						= f.input :password,  required: false, input_html: { autocomplete: "current-password" }, label: "Contraseña"
						= f.input :remember_me, as: :boolean, label: "Recordarme" if devise_mapping.rememberable?
				.actions.text-center
					= f.button :submit, "Ingresar", class: 'btn btn-success'
			.text-center
				= render "users/shared/links"
