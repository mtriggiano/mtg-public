.row.d-flex.align-items-center
	.col-md-offset-3.col-md-6.mx-auto
		.container.pt-4.border.shadow.p-4
			%h2.text-center
				= icon('fas', 'key') 
				¿Olivdaste tu contraseña?
			%hr.dotted
			= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, wrapper: :horizontal_form) do |f|
				= error_notification(f)
				.form-inputs
				= f.input :email, equired: true, autofocus: true, input_html: { autocomplete: "email" } |
				.actions.text-center
					= f.button :submit, "Enviarme instrucciones", class: 'btn btn-success'
			%hr.dotted
			= render "users/shared/links"
