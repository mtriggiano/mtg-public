.card.justify-flex-content.p-4
  .card-body.pt-0
    .row
      .col-8.offset-2
        %h5.card-title.text-center.border-bottom.pb-3
          = icon('fas', 'bell')
          Configuración de notificaciones
        = simple_form_for user,html: { class: 'horizontal-form'}, wrapper: :horizontal_form do |f|
          = error_notification(f)
          = hidden_field_tag :view, params[:view]
          .row
            .col-md-3
              = yes_no_toggle(f, :bill_due_notification, "Notificación de vencimiento de facturas")
          %hr
          .actions.text-center
            = save_button
