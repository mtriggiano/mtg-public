.container
	.img-container
		= image_tag '/images/default_product.png' 
	#actions
		.docs-buttons
			.btn-group
				= button_tag icon('fas', 'search-plus'), data:{method: 'zoom', option: '0.1'}, class: 'btn btn-primary'
				= button_tag icon('fas', 'search-minus'), data:{method: 'zoom', option: '-0.1'}, class: 'btn btn-primary'
			.btn-group
				= button_tag icon('fas', 'arrow-left'), data:{method: 'move', option: '-10', 'sedond-option': 0}, class: 'btn btn-primary'
				= button_tag icon('fas', 'arrow-right'), data:{method: 'move', option: '10', 'second-option': 0}, class: 'btn btn-primary'
				= button_tag icon('fas', 'arrow-up'), data:{method: 'move', option: '0', 'second-option': -10}, class: 'btn btn-primary'
				= button_tag icon('fas', 'arrow-down'), data:{method: 'move', option: '0', 'second-option': 10}, class: 'btn btn-primary'
			.btn-group
				= button_tag icon('fas', 'undo-alt'), data:{method: 'rotate', option: '-45'}, class: 'btn btn-primary'
			.btn.group
				= button_tag icon('fas', 'arrows-alt-h'), data:{method: 'scaleX', option: '-1'}, class: 'btn btn-primary'
				= button_tag icon('fas', 'arrows-alt-v'), data:{method: 'scaleY', option: '-1'}, class: 'btn btn-primary'
			.btn-group
				= button_tag icon('fas', 'check'), data:{method: 'crop'}, class: 'btn btn-primary'
				= button_tag icon('fas', 'times'), data:{method: 'clear'}, class: 'btn btn-primary'
			.btn-group
				= button_tag icon('fas', 'lock'), data:{method: 'disable'}, class: 'btn btn-primary'
				= button_tag icon('fas', 'unlock'), data:{method: 'enable'}, class: 'btn btn-primary'
			.btn-group
				= button_tag icon('fas', 'sync'), data:{method: 'reset'}, class: 'btn btn-primary'
				= button_tag icon('fas', 'upload'), data:{method: 'disable'}, class: 'btn btn-primary', onclick: '$("#inputImage").click()'
				= file_field_tag :file, id: 'inputImage', class: 'sr-only'
				= button_tag icon('fas', 'power-off'), data:{method: 'destroy'}, class: 'btn btn-primary'
			.btn-group.btn-group-crop
				= button_tag "Obtener texto", type: 'button', data:{method: "getCroppedCanvas", option: {'maxWidth': 4096, 'maxHeight': 4096}, 'disable-with': '<span class="spinner-border spinner-border-sm" role="status"></span> Reconociendo texto...'}, class: 'btn btn-success'
			.progress.mb-3.sr-only
				.progress-bar{role:"progressbar", style:"width: 0%;", 'aria-valuenow':"0", 'aria-valuemin':"0", 'aria-valuemax':"100"}